<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FF1745A7"
    android:id="@+id/backGround">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:id="@+id/picture"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_above="@+id/end_term_date"
        android:layout_centerHorizontal="true" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="New Text"-->
        <!--android:id="@+id/party"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textColor="#ffffff"-->
        <!--android:layout_alignBaseline="@+id/end_term_date"-->
        <!--android:layout_alignBottom="@+id/end_term_date"-->
        <!--android:layout_alignStart="@+id/end_term_date" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/end_term_date"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/picture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sponsored Bills:"
        android:id="@+id/sponsoredBills"
        android:textColor="#ffffff"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/picture"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Committees:"
        android:id="@+id/committeesHeader"
        android:textColor="#ffffff"
        android:layout_below="@+id/sponsoredBills"
        android:layout_alignStart="@+id/sponsoredBills"
        android:layout_marginTop="80dp" />

</RelativeLayout>