<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#BA2025">

    <!--android:layout_alignEnd="@+id/tableRow" />-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zip_code"
        android:textColor="#ffffff"
        android:textIsSelectable="true"
        android:text="Enter Zip Code"
        android:textAlignment="center"
        android:layout_above="@+id/locator"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/locator"
        android:backgroundTint="#F1F6D9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Get Location"
        android:id="@+id/locator"
        android:layout_above="@+id/represent"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/represent"
        android:backgroundTint="#F1F6D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Represent!"
        android:id="@+id/app_name"
        android:typeface="normal"
        android:textSize="50dp"
        android:textColor="#F1F6D9"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Legislators!"
        android:id="@+id/represent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#F1F6D9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/for_red_background"
        android:layout_above="@+id/app_name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/zip_code"
        android:layout_alignEnd="@+id/zip_code"
        android:backgroundTint="#F1F6D9" />

    <!--<TableRow-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignBottom="@+id/zip_code"-->
        <!--android:layout_below="@+id/locator"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:id="@+id/tableRow"></TableRow>-->


</RelativeLayout>
